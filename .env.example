# Robinhood Trading Bot - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# ROBINHOOD CREDENTIALS (Required)
# ===========================================
ROBINHOOD_USERNAME=your_username
ROBINHOOD_PASSWORD=your_password

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_USER=postgres
DB_PASSWORD=postgres

# ===========================================
# TRADING CONFIGURATION
# ===========================================
# Symbol to trade (e.g., TQQQ, SPY, AAPL)
SYMBOL=TQQQ

# Maximum investment per trade in dollars
MAX_INVESTMENT=20.00

# Profit target percentage (e.g., 1.0 = 1%)
PROFIT_TARGET_PCT=1.0

# Stop loss percentage (negative, e.g., -0.5 = -0.5%)
STOP_LOSS_PCT=-0.5

# Maximum total position value
MAX_POSITION_VALUE=100.00

# Check interval in seconds (300 = 5 minutes)
CHECK_INTERVAL_SECONDS=300

# ===========================================
# STRATEGY PARAMETERS
# ===========================================
# RSI Settings
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# MACD Settings
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# ===========================================
# PDT COMPLIANCE
# ===========================================
PDT_TRACKING_DAYS=5
MAX_DAY_TRADES=3

# ===========================================
# LOGGING
# ===========================================
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
